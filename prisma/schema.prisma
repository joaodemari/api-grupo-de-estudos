generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Aluno {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  nome String
  idade Int
  email String
  curso String
  hobbies String[]
  telefone Telefone?
}

model Telefone {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  ddd Int
  numero Int
  aluno      Aluno?   @relation(fields: [alunoId], references: [id])
  alunoId    String?   @unique @db.ObjectId
}